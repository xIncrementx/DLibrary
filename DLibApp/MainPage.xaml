<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DLibApp.MainPage"
             xmlns:mainViewmodel="clr-namespace:DLibApp.Viewmodels"
             x:DataType="mainViewmodel:MainViewmodel">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Center">

            <!--Dependencies-->
            <mainViewmodel:MainViewmodel/>

            <!--Label-->
            <Label 
                Text="{Binding Count}"
                FontSize="32"
                HorizontalOptions="Center" />

            <!--Button-->
            <Button
                Text="Log in"
                Clicked="OnLoginButtonClicked"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>